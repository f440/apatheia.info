---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: /blog/categories/{{ tag }}/
layout: layouts/base.liquid
eleventyComputed:
  title: "{{ tag }}"
---

<article>
  <h1>{{ tag }}</h1>
  
  {% assign tagPosts = collections.posts | filterByTag: tag %}
  
  {% for post in tagPosts %}
  <section>
    <h2>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </h2>
    <span>{{ post.data.created_at | dateFormat: "yyyy.MM.dd" }}</span>
    
    {% if post.data.tags %}
      {% for postTag in post.data.tags %}
        <span>
          <a href="/blog/categories/{{ postTag }}/">{{ postTag }}</a>
          {% unless forloop.last %} {% endunless %}
        </span>
      {% endfor %}
    {% endif %}
  </section>
  {% endfor %}
</article>