<% render "/default.*" do %>
<article>
  <% sorted_articles.each_slice(@config[:page_size]).to_a.fetch(item[:page] - 1).each_with_index do |article, i| %>
  <section>
    <h2><%= link_to article[:title], article.path %></h2>
    <span><%= Time.parse(article[:created_at].to_s).strftime('%Y.%m.%d') %></span> <%= render "/_tags.*", item: article %>
    <%= article.compiled_content.gsub(/<!-- more -->.*/m, '') %>
  </section>
  <% end %>

  <div class="page">
    <% if prev_page(item[:page]) %><%= link_to '&#171;', prev_page(item[:page]) == 1 ? "/" : "/page/#{prev_page(item[:page])}/" %><% end %>
    <% if next_page(item[:page]) %><%= link_to '&#187;', "/page/#{next_page(item[:page])}/" %><% end %>
  </div>
</article>
<% end %>
